files:
  "/tmp/loaderio.txt":
    mode: "644"
    content: |
      # Qui ci va il tuo token Loader.io
      loaderio-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.txt

commands:
  01_copy_loaderio:
    command: |
      echo "Copy loaderio.txt in Apache docroot"
      cp /tmp/loaderio.txt /var/www/html/loaderio.txt
